<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo"></style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/basePrimaryBackgroundColour</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- card view -->
    <style name="card_view_style">
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="contentPadding">@dimen/card_view_padding</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardMaxElevation">@dimen/card_view_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="white_op100.card_view_style" parent="card_view_style">
        <item name="cardBackgroundColor">@color/white_op100</item>
    </style>

    <style name="violet_op20.card_view_style" parent="card_view_style">
        <item name="cardBackgroundColor">@color/violet_op20</item>
        <item name="cardElevation">@dimen/card_view_elevation_zero</item>
        <item name="cardMaxElevation">@dimen/card_view_elevation_zero</item>
    </style>

    <!-- text drop shadow -->
    <style name="text_drop_shadow_grey_dt2_sz2">
        <item name="android:shadowColor">@color/md_grey_900</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Ext Dialog -->
    <style name="ExtDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="ExtDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/ExtDialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <item name="ext_dialog_background_color">@color/ExtDialogBackgroundColor</item>
        <item name="ext_dialog_divider_color">@color/ExtDialogDividerColor</item>
        <item name="ext_dialog_title_frame_color">@color/ExtDialogTitleFrmaeColor</item>
        <item name="ext_dialog_title_color">@color/ExtDialogTitleColor</item>
        <item name="ext_dialog_message_color">@color/ExtDialogMessageColor</item>
        <item name="ext_dialog_btn_positive_color">@color/ExtDialogPositiveButtonTextColor</item>
        <item name="ext_dialog_btn_negative_color">@color/ExtDialogNegativeButtonTextColor</item>

        <item name="ext_dialog_list_selector">@drawable/ext_dialog_item_selector</item>
        <item name="ext_dialog_btn_stacked_selector">@drawable/ext_dialog_item_selector</item>
        <item name="ext_dialog_btn_positive_selector">@drawable/ext_dialog_btn_right_selector</item>
        <item name="ext_dialog_btn_negative_selector">@drawable/ext_dialog_btn_left_selector</item>
        <item name="ext_dialog_widget_color">@color/ExtDialogWidgetColor</item>
    </style>

    <style name="ExtDialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ext_dialog_button_frame_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ExtDialogButton.Text" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/ext_dialog_button_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/ext_dialog_button_min_width</item>
    </style>

    <!--floating action-->
    <style name="MenuLabelsStyle">
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white_op100</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@color/md_grey_900</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_colorNormal">@color/md_orange_A700</item>
        <item name="fab_colorPressed">@color/mustard_spot_op100</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>
</resources>
