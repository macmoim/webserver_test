<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/ext_dialog_margin"
    android:paddingLeft="@dimen/ext_dialog_margin"
    android:paddingRight="@dimen/ext_dialog_margin"
    android:paddingStart="@dimen/ext_dialog_margin"
    tools:gravity="start|center_vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/ext_dialog_list_item_height"
        android:textSize="@dimen/ext_dialog_content_text_size"
        tools:ignore="NewApi,RtlSymmetry"
        tools:text="Item" />

    <RadioButton
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:minHeight="@dimen/ext_dialog_list_item_height" />
</RelativeLayout>